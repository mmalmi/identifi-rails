<form>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">You</h3>
    </div>
    <div class="panel-body">
      <p>
        <a class="btn btn-default">
          <i class="glyphicon glyphicon-envelope"></i> Email
        </a>
        <a class="btn btn-social btn-google-plus">
          <i class="fa fa-google-plus"></i> Google
        </a>
        <a class="btn btn-social btn-facebook">
          <i class="fa fa-facebook"></i> Facebook
        </a>
        <a class="btn btn-social btn-twitter">
          <i class="fa fa-twitter"></i> Twitter
        </a>
        <a class="btn btn-social btn-linkedin">
          <i class="fa fa-linkedin"></i> LinkedIn
        </a>
      </p>

      <div class="input-group">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Add identifier <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">Email</a></li>
            <li><a href="#">Url</a></li>
            <li><a href="#">Phone</a></li>
            <li class="divider"></li>
            <li><a href="#">Name</a></li>
            <li><a href="#">Address</a></li>
          </ul>
        </div><!-- /btn-group -->
        <input type="text" class="form-control">
      </div><!-- /input-group -->
    </div>
  </div>


  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Recipient</h3>
    </div>
    <div class="panel-body">
      <div class="input-group">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Add identifier <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">Email</a></li>
            <li><a href="#">Url</a></li>
            <li><a href="#">Phone</a></li>
            <li class="divider"></li>
            <li><a href="#">Name</a></li>
            <li><a href="#">Address</a></li>
          </ul>
        </div><!-- /btn-group -->
        <input type="text" class="form-control">
      </div><!-- /input-group -->
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Review</h3>
    </div>
    <div class="panel-body">

      <div class="btn-group form-group">
        <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-thumbs-up"></span> positive</button>
        <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-question-sign"></span> neutral</button>
        <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-thumbs-down"></span> negative</button>
      </div>

      <div class="form-group">
        <textarea class="form-control" id="comment" placeholder="Comment"></textarea>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-default disabled">Publish</button>  
</form>