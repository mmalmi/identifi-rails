<div class="panel panel-default panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Write feedback</h3>
  </div>
  <div class="panel-body">
    <form action="" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
      <div class="form-group">
        <textarea name="comment" class="form-control" id="comment" placeholder="Comment"></textarea>
      </div>

      <div class="row">
        <div class="col-md-10">
          <div class="btn-group" data-toggle="buttons-radio">
            <button type="button" value="1" class="btn btn-default btn-success" id="btn-positive"><span class="glyphicon glyphicon-thumbs-up"></span> positive</button>
            <button type="button" value="0" class="btn btn-default" id="btn-neutral"><span class="glyphicon glyphicon-question-sign"></span> neutral</button>
            <button type="button" value="-1" class="btn btn-default" id="btn-negative"><span class="glyphicon glyphicon-thumbs-down"></span> negative</button>
          </div>
          <input name="rating" type="hidden" id="buttonvalue" value="1"/>
        </div>
        <div class="col-md-2" style="text-align:right">
          <button type="submit" class="btn btn-primary">Publish</button>
        </div>
      </div>
    </form>
  </div>
</div>